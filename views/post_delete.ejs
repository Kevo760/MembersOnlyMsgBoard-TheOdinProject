<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <%- include('./partials/nav.ejs') %>
  <body>
    <div class="content">
      <% if (post) { %>
          <div class="msg-box">
            <div class="user-info">
              <b><%=  post.user.username %></b>
              <i><%= post.user.status %></i>
            </div>
            <div class="msg-info">
              <b><%= post.createdAt.toDateString() %></b>
              <p><%= post.message %></p>
            </div>
          </div>
          <form method="POST" action="">
            <h3>Are you sure you want to delete this post?</h3>
            <div class="form-group">
                <input class="form-control" 
                id="postid"
                type="hidden" 
                name="postid" 
                required="true" 
                value="<%= post._id %>"/>
              </div>
              <button class="admin-delete" type="submit">Delete</button>
        </form>
      <% } else { %>
        <div class="msg-box">
          <h2>There are not post available, please add a post.</h2>
        </div>
      <% } %>
  </body>
</html>