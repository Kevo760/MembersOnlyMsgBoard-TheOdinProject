<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <%- include('./partials/nav.ejs') %>
  <body>
    <div class="content">
      <form method="post" action="/" class="bg-dark" class="login-form">
        <h2>Login</h2>
        <input
        name="username"
        id="username"
        placeholder="Enter Username"
        type="text"
        required="true"
        >

        <input
        name="password"
        id="password"
        placeholder="Enter Password"
        type="password"
        required="true"
        >
        <button type="submit">Login</button>
        <% if (typeof errorMsg !== 'undefined') { %>
          <span class="err-msg"><%= errorMsg %></span>
         <% } %>
      </form>
    </div>
  </body>
</html>